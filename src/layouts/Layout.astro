---
import "@fontsource-variable/roboto-mono";
import { primary } from "tailwind.config.mjs";

type Props = { children: any };
---

<!doctype html>
<html
  class="min-h-full flex flex-col bg-primary text-secondary-tinted"
  lang="en"
>
  <head>
    <meta charset="UTF-8" />
    <meta content="ie=edge" http-equiv="x-ua-compatible" />
    <meta name="theme-color" content={primary} />
    <meta name="msapplication-TileColor" content={primary} />
    <meta
      name="description"
      content="Aleksi Toivonen is a front-end engineer who builds exceptional user interfaces for
    the web with an eye on details."
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <meta name="author" content="Aleksi Toivonen" />
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="index,follow" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Aleksi Toivonen</title>
  </head>
  <body class="flex-grow">
    <slot />
  </body>
</html>
